# Configuração do Sistema de Licitações dos Correios
# Copie este arquivo para .env e configure as variáveis

# OpenAI API Key (obrigatório)
OPENAI_API_KEY=sua_chave_openai_aqui

# Configuração do Banco de Dados
DATABASE_URL=sqlite:///./data/licitacoes.db

# Configuração da API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# URLs dos Portais de Licitação
COMPRASNET_URL=https://comprasnet.gov.br
PNCP_URL=https://pncp.gov.br

# Configuração de Email (opcional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_app

# Configuração de Notificações (opcional)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Configuração de Logs
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Configuração de Segurança
SECRET_KEY=sua_chave_secreta_aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuração de CORS
ALLOWED_ORIGINS=["http://localhost:3000", "https://seu-frontend.com"]

# Configuração de Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuração de Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Configuração de Arquivos
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB