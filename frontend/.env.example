# Configuração do Frontend - Sistema de Licitações dos Correios
# Copie este arquivo para .env e configure as variáveis

# URL da API do Backend
REACT_APP_API_URL=http://localhost:8000/api

# Configuração da Aplicação
REACT_APP_TITLE=Sistema de Licitações dos Correios
REACT_APP_VERSION=2.0.0

# Configuração de Tema
REACT_APP_THEME_PRIMARY=#0066cc
REACT_APP_THEME_SECONDARY=#0052a3

# Configuração de Funcionalidades
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_FEEDBACK=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Configuração de Paginação
REACT_APP_ITEMS_PER_PAGE=20
REACT_APP_MAX_ITEMS_PER_PAGE=100

# Configuração de Upload
REACT_APP_MAX_FILE_SIZE=10485760  # 10MB
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt

# URLs Externas
REACT_APP_COMPRASNET_URL=https://comprasnet.gov.br
REACT_APP_PNCP_URL=https://pncp.gov.br
REACT_APP_HELP_URL=https://help.correios.com.br

# Configuração de Desenvolvimento
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# Configuração de Autenticação (quando implementada)
REACT_APP_AUTH_ENABLED=false
REACT_APP_SSO_URL=https://sso.correios.com.br

# Configuração de Monitoramento
REACT_APP_ANALYTICS_ID=UA-XXXXXXXXX-X
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project